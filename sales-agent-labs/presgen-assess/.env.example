# PresGen-Assess Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://presgen_assess_user:secure_password@localhost:5432/presgen_assess
CHROMA_DB_PATH=./knowledge-base/embeddings

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_organization_id_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=./config/google-service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id

# PresGen Module Integration (40-slide support)
PRESGEN_CORE_URL=http://localhost:8001
PRESGEN_AVATAR_URL=http://localhost:8002
PRESGEN_CORE_MAX_SLIDES=40
PRESGEN_AVATAR_MAX_SLIDES=40

# Workflow Settings (Async-aware)
MAX_CONCURRENT_WORKFLOWS=10
ASSESSMENT_TIMEOUT_MINUTES=60
ASYNC_WORKFLOW_ENABLED=true
WORKFLOW_RESUME_TOKEN_TTL_HOURS=72
MAX_SLIDES_SUPPORTED=40

# Performance Settings
PRESENTATION_GENERATION_TIMEOUT_SECONDS=600
AVATAR_GENERATION_TIMEOUT_SECONDS=900
RAG_SOURCE_CITATION_REQUIRED=true

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
ENABLE_CORS=true

# Redis Configuration (for async tasks)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here